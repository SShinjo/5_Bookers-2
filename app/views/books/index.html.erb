	   <% if @book.errors.any? %>
       <%= render 'layouts/error-message' %>
      <% end %>
		<div class="sidebar col-xs-3">
		<%= render 'layouts/sidebar', book:@book, user:@current_user %>
		</div>

		<div class="main-contents col-xs-9">
		<h1>Books</h1>
		<table class="table">
		 <tr>
			<th></th>
			<th>Title</th>
			<th>Opinion</th>
		</tr>
		<% @books.each do |book| %>
		<tr>
			<td><%= attachment_image_tag book.self, :profile_image, :fill, 30, 30, class: "profile-thumb", fallback: "no_image.jpg", size:'30x30' %></td>
		    <td>
		    	<%= link_to book.title, book_path(book) %>
		    </td>
			<td><%= book.body %></td>
		</tr>
		<% end %>


		</table>
		</div>


