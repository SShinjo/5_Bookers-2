		<div class="sidebar col-xs-3">
		<%= render 'layouts/sidebar', book:@book_new, user:@user %>
		</div>
		<div class="main-contents col-xs-9">
		<h1>Book detail</h1>
		<table class="table">
		<tr>
		<% if @book.user_id == current_user.id %>
			<td>
				<%= attachment_image_tag @user, :profile_image, :fill, 30, 30, class: "profile-thumb", fallback: "no_image.jpg", size:'30x30' %><br>
				<%=link_to @user.name, user_path(@user) %>
			</td>
		<% else %>
			<td>
				<%= attachment_image_tag @user, :profile_image, :fill, 60, 60, class: "profile-thumb", fallback: "no_image.jpg", size:'60x60' %><br>
				<%=link_to @user.name, user_path(@user) %>
			</td>
		<% end %>
			<td><%= @book.title %></td>
			<td><%= @book.body %></td>
		<% if @book.user_id == current_user.id %>
			<td><%= link_to "edit", edit_book_path(@book), class: "btn btn-sm btn-success" %></td>
			<td><%= link_to "destroy", book_path(@book), method: :delete, class: "btn btn-sm btn-danger", data: {confirm: "本当に消しますか？"} %></td>
		<% else %>
		<% end %>
		</tr>
		</table>
		</div>