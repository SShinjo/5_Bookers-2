<div class="sidebar-box">
<h1>User info</h1>
<%= attachment_image_tag user, :profile_image, :fill, 60, 60, class: "profile-thumb", fallback: "no_image.jpg" %>
<table class="table">
<tr class="prof">
	<th>name</th>
	<td><%= user.name %></td>
</tr>
<tr class="prof">
	<th>introduction</th>
	<td><%= user.introduction %></td>
</tr>
</table>
<% if user.id == current_user.id %>
<div class="row">
	<%= link_to edit_user_path(user), class: "btn col-xs-12 btn-default" do %>
	<span class="glyphicon glyphicon-wrench"></span>
	<% end %>
</div>
<% else %>
<div class="row">
	<%= link_to user_path(current_user), class: "btn col-xs-12 btn-default" do %>
	<span class="glyphicon glyphicon-wrench"></span>
	<% end %>
</div>
<% end %>
</div>

<div class="sidebar-box">
		<h1>New book</h1>
		<%= form_for(book) do |f| %>

		<div class="form-group">
		<label class="control-label" for="inputTitle">Title</label>
		<%= f.text_field :title, class: "form-control", id: "inputTitle" %>
		</div>

		<div class="form-group">
		<label class="control-label" for="inputBody">Opinion</label>
		<%= f.text_area :body, class: "form-control", id: "inputBody" %>
		</div>

		<div class="row">
		<%= f.submit 'Create Book', class:"btn col-xs-12 btn-info" %>
		</div>

		<% end %>
</div>
